#! /bin/bash

# Gon's metalinter is what i run when i'm too lazy to run https://github.com/alecthomas/gometalinter

# exit when error
set -e
# debug
set -x

fgt go fmt ./...
fgt goimports -w .
fgt golint ./...
fgt go vet ./...
fgt gosimple ./...
fgt interfacer ./...
fgt errcheck -blank -ignore Close ./...
staticcheck ./...
goconst ./...
